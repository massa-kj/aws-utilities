# AWS Utilities - Global Configuration
# This file contains global settings that apply across all services

# AWS Configuration
AWS_ACCOUNT_ID="999999999999"
AWS_DEFAULT_REGION="xx-yyyy-1"

# Common Settings
BACKUP_BASE_DIR="${HOME}/aws-utilities-backups"
TEMP_DIR="/tmp/aws-utilities"
LOG_DIR="${HOME}/.aws-utilities/logs"

# Output Configuration
VERBOSE_MODE="false"
COLOR_OUTPUT="true"
TIMESTAMP_FORMAT="%Y%m%d-%H%M%S"

# Security Settings
SECURE_MODE="true"
BACKUP_RETENTION_DAYS="30"

# Development Settings
DEBUG_MODE="false"
DRY_RUN="false"
